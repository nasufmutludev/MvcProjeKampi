@using EntityLayer.Concrete
@model List<Category>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>GetCategoryList</title>
</head>
<body>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Adı</th>
                <th scope="col">Durum</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryStatus</td>
                    <td>
                        <button class="btn btn-success btn-xs">Güncelle</button>
                        <button class="btn btn-danger btn-xs">Sil</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>
</body>
</html>
